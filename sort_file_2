import os

def main():
    file_extension = {}
    os.chdir("FilesToSort")

    for filename in os.listdir('.'):
        if os.path.isdir(filename):
            continue

        extension = filename.split('.')[-1]
        if extension not in file_extension:
            category = input("Name category for {} files: ".format(extension))
            file_extension[extension] = category
        try:
            os.mkdir(extension)
        except FileExistsError:
            pass
        os.rename(filename, "{}/{}".format(file_extension[extension], filename))

main()
